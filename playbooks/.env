# Disable SSH host key checking for testing environments
ANSIBLE_HOST_KEY_CHECKING=False

# Enable colored output for better readability
ANSIBLE_FORCE_COLOR=1

# Ensure Python output is sent straight to terminal
PYTHONUNBUFFERED=1

# Set terminal type for proper output formatting
TERM=xterm

# Set default timeout for operations (in seconds)
ANSIBLE_TIMEOUT=30

# Enable detailed debug output when needed
ANSIBLE_DEBUG=0

# Configure retry files location
ANSIBLE_RETRY_FILES_ENABLED=False

# Set inventory cache timeout
ANSIBLE_INVENTORY_CACHE_TIMEOUT=3600

# Note: Ensure this file has restricted permissions (600)
