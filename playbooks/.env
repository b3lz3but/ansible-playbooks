# === SSH Settings ===
# Disable SSH host key checking for testing environments
ANSIBLE_HOST_KEY_CHECKING=False

# === Output Settings ===
# Enable colored output for better readability
ANSIBLE_FORCE_COLOR=1
PYTHONUNBUFFERED=1
TERM=xterm

# === Performance Settings ===
# Connection timeout in seconds
ANSIBLE_TIMEOUT=30
# Parallel execution limit
ANSIBLE_FORKS=5

# === Debug Settings ===
ANSIBLE_DEBUG=0
ANSIBLE_VERBOSITY=0
ANSIBLE_DISPLAY_SKIPPED_HOSTS=True

# === Cache Settings ===
ANSIBLE_CACHE_PLUGIN=jsonfile
ANSIBLE_CACHE_PLUGIN_CONNECTION=/tmp/ansible_cache
ANSIBLE_INVENTORY_CACHE_TIMEOUT=3600
ANSIBLE_RETRY_FILES_ENABLED=False

# Note: Ensure this file has restricted permissions (600)
